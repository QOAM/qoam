@using System.Web.Optimization
@model QOAM.Website.ViewModels.Account.SettingsViewModel

@{
    ViewBag.Title = "Account settings";
}
<div class="container main">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Update your account settings and submit the form</h3>
                </div>
                <div class="panel-body">
                    @if (this.ViewBag.SaveSuccessful)
                    {
                        <div class="alert alert-success alert-dismissible" role="alert">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            Your account settings have been saved!
                        </div>
                    }

                    @using (Html.BeginForm("Settings", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                        <fieldset>
                            <legend>Update your account settings and submit the form</legend>

                            <div class="form-group">
                                @Html.LabelFor(m => m.DisplayName, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.DisplayName, new { @class = "form-control", maxlength = "100" })
                                    @Html.ValidationMessageFor(m => m.DisplayName, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Password", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.ActionLink("Change password", "ChangePassword", null, new { @class = "btn btn-info" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.Label("Email", new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.ActionLink("Change e-mail address", "ChangeEmail", null, new { @class = "btn btn-info" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.OrcId, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.OrcId, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.OrcId, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-10 col-md-offset-2">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}