@using System.Web.Optimization
@model QOAM.Website.ViewModels.Account.ResetPasswordViewModel

@{
    ViewBag.Title = "Reset your password";
}
<div class="container main">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please fill in the required information and submit the form</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                        <fieldset>
                            <legend>Please fill in the required information and submit the form</legend>
                            
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="col-md-10 col-md-offset-2">
                                <input type="submit" value="Submit" class="btn btn-primary" />
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}