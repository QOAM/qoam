@model QOAM.Website.ViewModels.Institutions.UpsertViewModel

@{
    ViewBag.Title = "Edit institution";
}

<div class="container main">
    
    <h2>@ViewBag.Title: @Html.ActionLink(Model.Name, "Details", "Institutions", new { Model.Id }, null)</h2>

    <br/>
    @using (Html.BeginForm("EditInstitution", "Admin", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.Partial("_UpsertInstitution")

            <p>
                <em>If a domainname is changed, registrants with email addresses in this domain can no longer renew their address.</em>
            </p>

            <div class="col-lg-10 col-md-offset-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </fieldset>
    }
</div>

@section scripts
{
    @Html.Partial("_FormScripts")
}