@model QOAM.Website.ViewModels.Institutions.UpsertViewModel

@{
    ViewBag.Title = "Add institution";
}

<div class="container main">
    
    <h2>@ViewBag.Title</h2>
    
    <p>
        In the textbox below you can enter a new institution.
    </p>
    
    @using (Html.BeginForm("AddInstitution", "Admin", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.Partial("_UpsertInstitution")

            <div class="col-lg-10 col-md-offset-2">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </fieldset>
    }
    
    <br /><br />
    <p>Alternatively, import several institutions from an Excel file.</p>
    
    <br />
    @using (Html.BeginForm("BulkAddInstitution", "Admin", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <fieldset>
            <legend>@ViewBag.Title</legend>

            @Html.Partial("_FileUpload")

            <div class="row bottommargin">
                <div class="col-xs-1 vcenter">
                </div>
                <div class="col-xs-11">
                    <input type="submit" value="Import" class="btn btn-primary" />
                </div>
            </div>
        </fieldset>
    }
</div>

@section scripts
{
    @Html.Partial("_FormScripts")
}