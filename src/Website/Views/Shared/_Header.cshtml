@helper MenuItemClass(string menuItem, string additionalClass = "")
{
    if (menuItem == ViewBag.SelectedMenuItem)
    {
        <text>class="active @(additionalClass)"</text>
    }
}

<div class="navbar navbar-inverse">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">Quality Open Access Market</a>
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li @MenuItemClass("Journals")><a href="@Url.Action("Index", "Journals")"><i class="glyphicon glyphicon-search"></i> Search journal</a></li>
                <li @MenuItemClass("Score")><a href="@Url.Action("Index", "Score")"><i class="glyphicon glyphicon-list-alt"></i> Score journal</a></li>
                <li @MenuItemClass("Profiles")><a href="@Url.Action("Index", "Profiles")"><i class="glyphicon glyphicon-user"></i> Profiles</a></li>
                <li @MenuItemClass("Institutions")><a href="@Url.Action("Index", "Institutions")"><span class="icon-group"></span> Institutions</a></li>
                @if (User.Identity.IsAuthenticated && ViewBag.PageId == "journals-details-page")
                {
                    <li @MenuItemClass("MyQoam", "dropdown")>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Index", "MyQoam")"><i class="glyphicon glyphicon-home"></i> My QOAM <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Add", "MyQoam")"><i class="glyphicon glyphicon-plus"></i> Add to My QOAM</a></li>
                            @*<li role="separator" class="divider"></li>*@
                            <li><a href="@Url.Action("Delete", "MyQoam")"><i class="glyphicon glyphicon-remove"></i> Delete from My QOAM</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="@Url.Action("Index", "MyQoam")"><i class="glyphicon glyphicon-home"></i> Go to My QOAM</a></li>
                        </ul>
                    </li>
                }
                else if (User.Identity.IsAuthenticated && ViewBag.PageId == "myqoam-index-page") {
                    <li @MenuItemClass("MyQoam", "dropdown")>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Index", "MyQoam")"><i class="glyphicon glyphicon-home"></i> My QOAM <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="@Url.Action("Empty", "MyQoam")"><i class="glyphicon glyphicon-ban-circle"></i> Empty My QOAM</a></li>
                        </ul>
                    </li>
                }
                else {
                    <li @MenuItemClass("MyQoam")><a href="@Url.Action("Index", "MyQoam")"><i class="glyphicon glyphicon-home"></i> My QOAM</a></li>
                }
            </ul>
            <ul class="nav navbar-nav navbar-right">
                @{ Html.RenderPartial("_LoginPartial"); }
            </ul>
        </div>
    </div>
</div>