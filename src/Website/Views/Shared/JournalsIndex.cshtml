@using System.Web.Mvc.Html5
@using System.Web.Optimization
@using PagedList.Mvc
@using QOAM.Core
@using QOAM.Website.Helpers
@using QOAM.Website.ViewModels.Journals
@model IndexViewModel

@{
    ViewBag.Title = "OA Journals";
}

<div class="container main">
    <div class="row side">
        <div class="col-md-3">
            <div id="filter" class="well">
                <h3>
                    Filter
                    <img src="~/Images/zoom.png" class="pull-right clearfix" style="height: 30px;" />
                </h3>

                @using (Html.BeginForm("Index", null, FormMethod.Get, new { id = "search-form" }))
                {
                    <fieldset>
                        <legend>Search</legend>

                        @Html.HiddenFor(m => m.OpenAccess)
                        @Html.HiddenFor(m => m.InstitutionalDiscounts)

                        <div class="form-group editor-label-placeholder">
                            @Html.LabelFor(m => m.Title, null, new { @class = "control-label" })
                        </div>
                        <div class="form-group">
                            @Html.Html5TextBoxFor(m => m.Title, InputTypes.InputType.Text, new { @class = "form-control" }, "Search by journal title")
                            @Html.ValidationMessageFor(m => m.Title, null, new { @class = "control-label" })
                        </div>

                        <div class="form-group editor-label-placeholder">
                            @Html.LabelFor(m => m.Issn, null, new { @class = "control-label" })
                        </div>
                        <div class="form-group">
                            @Html.Html5TextBoxFor(m => m.Issn, InputTypes.InputType.Text, new { @class = "form-control" }, "Search by ISSN")
                            @Html.ValidationMessageFor(m => m.Issn, null, new { @class = "control-label" })
                        </div>

                        <div class="form-group editor-label-placeholder">
                            @Html.LabelFor(m => m.Publisher, null, new { @class = "control-label" })
                        </div>
                        <div class="form-group">
                            @Html.Html5TextBoxFor(m => m.Publisher, InputTypes.InputType.Text, new { @class = "form-control" }, "Search by publisher")
                            @Html.ValidationMessageFor(m => m.Publisher, null, new { @class = "control-label" })
                        </div>

                        <div class="form-group editor-label-placeholder">
                            @Html.LabelFor(m => m.Disciplines, null, new { @class = "control-label" })
                        </div>
                        <div class="form-group">
                            <div id="loading" style="text-align: center;">
                                <i class="glyphicon glyphicon-refresh gly-spin"></i>
                            </div>
                            <div id="discipline-container" style="display: none;">
                                @Html.ListBoxFor(m => m.SelectedDisciplines, Model.Disciplines, new {@class = "form-control"})
                                @*@Html.Html5TextBox(Html.NameFor(m => m.Disciplines) + "[" + Model.Disciplines.Count + "]", InputTypes.InputType.Text, new { @class = "form-control search-discipline" }, "Search by discipline")*@
                                @Html.ValidationMessageFor(m => m.Disciplines, null, new {@class = "control-label"})
                            </div>
                        </div>

                        @*<div class="form-group">
                                <ul id="disciplines">
                                    @for (var i = 0; i < Model.Disciplines.Count; i++)
                                    {
                                        <li class="discipline">
                                            <input type="hidden" name="@(Html.NameFor(m => m.Disciplines))[@i]" value="@Model.Disciplines[i]"/>
                                            @Model.Disciplines[i] <a href="#" class="remove-discipline"><i class="glyphicon glyphicon-trash"></i></a>
                                        </li>
                                    }
                                </ul>
                            </div>*@

                        @*<div class="form-group editor-label-placeholder">
                                @Html.LabelFor(m => m.Languages, null, new { @class = "control-label" })
                            </div>
                            <div class="form-group">
                                @Html.Html5TextBox(Html.NameFor(m => m.Languages) + "[" + Model.Languages.Count + "]", InputTypes.InputType.Text, new { @class = "form-control search-language" }, "Search by language")
                                @Html.ValidationMessageFor(m => m.Languages, null, new { @class = "control-label" })
                            </div>

                            <div class="form-group">
                                <ul id="languages">
                                    @for (var i = 0; i < Model.Languages.Count; i++)
                                    {
                                        <li class="language">
                                            <input type="hidden" name="@(Html.NameFor(m => m.Languages))[@i]" value="@Model.Languages[i]" />
                                            @Model.Languages[i] <a href="#" class="remove-language"><i class="glyphicon glyphicon-trash"></i></a>
                                        </li>
                                    }
                                </ul>
                            </div>*@

                        <!--
                        <div class="form-control high clearfix">
                            <span class="pull-right">
                                @Html.CheckBoxFor(m => m.SubmittedOnly, new { @class = "control-label" })
                                @Html.ValidationMessageFor(m => m.SubmittedOnly, null, new { @class = "control-label" })
                            </span>
                            <span class="pull-left ">
                                <small><label class="control-label" for="@Html.NameFor(m => m.SubmittedOnly)">All journals with <a class="help-window" href="@Url.Action("JournalScoreCard", "Home")#valuationjournalscorecard">Valuation Score Card</a></label></small>
                            </span>
                        </div>-->

                        <div class="form-group">
                            <div id="swotFilterContainer" class="score swotFilterContainer">
                                @Html.HiddenFor(m => m.SwotMatrix)
                                <a class="help-window" href="@Url.Action("JournalScoreCard", "Home")#swot" data-select-tab="false">SWOT matrix <span class="glyphicon glyphicon-info-sign swot-matrix-icon"></span></a>
                                <div class="table">
                                    <div class="table-row first-row">
                                        <div class="table-cell strong first-column" data-swot-type="strong">Strong <span>journals</span></div>
                                        <div class="table-cell threat second-column" data-swot-type="threat">Threat <span>(to authors)</span></div>
                                    </div>
                                    <div class="table-row second-row">
                                        <div class="table-cell opportunity first-column" data-swot-type="opportunity">Opportunity <span>(to publishers)</span></div>
                                        <div class="table-cell weak second-column" data-swot-type="weak">Weaker <span>journals</span></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <p>
                            <input id="submitForm" type="submit" value="Search" class="btn btn-primary" />
                        </p>
                    </fieldset>
                }
            </div>
            @*@if (ViewBag.PageId == "journals-index-page")
            {
                <div class="well">
                    <h3>Group invitations<img src="~/Images/scoresheet.png" class="pull-right clearfix" style="height:30px;" /></h3>
                    <br />
                    <p>
                        <a href="@Url.Action("BulkRequestValuation", "Score")" class="btn btn-primary">Invitations for Valuation Score Cards</a>
                    </p>
                </div>
            }*@
        </div>

        <div class="col-md-9">

            <div class="row">
                <div class="col-md-9">
                    @if (ViewBag.PageId == "myqoam-index-page")
                    {
                        <h3>Saved journals: @Model.Journals.TotalItemCount</h3>
                    }
                    else {
                        <h3>@Model.Journals.TotalItemCount <a id="open-access-filter" href="#">OA</a> en <a id="hybrid-filter" href="#">hybrid</a> journals; <a id="institutional-discount-filter" href="#">institutional discounts</a></h3>
                    }

                </div>
                <div class="col-md-3 text-right topmargin">
                    <div class="topmargin">@Sorting.JournalSortMenu(Model.SortBy, Model.Sort)</div>
                </div>
            </div>

            @if (Model.Journals.Any()) {
                const string title = "Italicized titles indicate institutional discounts.\nPlease click the tab 'Price information' on the detail page of the journal to find out more.";

                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="title">
                                Title&nbsp;&nbsp;
                                <a href="#" title="@title">
                                    <span class="glyphicon glyphicon-info-sign"></span>
                                </a>
                            </th>
                            <th class="publisher">Publisher</th>
                            <th class="swot"><a href="@Url.Action("JournalScoreCard", "Home")#swot">SWOT color</a></th>
                            <th><a class="help-window" href="@Url.Action("JournalScoreCard", "Home")#basejournalscorecard">Base score</a></th>
                            <th><a class="help-window" href="@Url.Action("JournalScoreCard", "Home")#valuationjournalscorecard">Valuation score</a></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var journal in Model.Journals)
                        {
                            <tr>
                                <td class="@(journal.InstitutionJournalPrices.Any() ? "has-prices" : "")">@Html.ActionLink(journal.Title, "Details", "Journals", new { id = journal.Id, returnUrl = Request.RawUrl }, null)</td>
                                <td>@Html.ActionLink(journal.Publisher.Name, "Index", "Journals", new { Publisher = journal.Publisher.Name }, null)</td>
                                <td class="verdict-@journal.Swot">
                                    @if (!string.IsNullOrWhiteSpace(journal.SubmissionPageLink) && journal.Swot == SwotVerdict.StrongJournal)
                                    {
                                        <a href="@journal.SubmissionPageLink" alt="Go to submission page" title="Go to submission page" class="submission-link" target="_blank">S</a>
                                    }
                                    else
                                    {
                                        @:&#160;
                                    }
                                </td>
                                <td>@Scores.AverageScore(journal.OverallScore)</td>
                                <td>@Scores.AverageScore(journal.ValuationScore)</td>
                            </tr>
                        }

                    </tbody>
                </table>

                @Html.PagedListPager(Model.Journals, page => Url.Action("Index", Model.ToRouteValueDictionary(page)), Html.PagedListRenderOptions())
            }
            else
            {
                @Html.Partial("_EmptyText")
            }
        </div>
    </div>
</div>

@section stylesheets
{
    @Styles.Render("~/styles/typeahead")
    @Styles.Render("~/styles/chosen")
}

@section scripts
{
    @Scripts.Render("~/scripts/typeahead")
    @Scripts.Render("~/scripts/chosen")

    @Html.Partial("_FormScripts")

    <script type="text/javascript">
        $(function () {
            var journalsController = new JournalsController();
            journalsController.index(
                '@Url.Action("Titles", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Issns", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Publishers", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Subjects", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Languages", null, null, this.Request.Url.Scheme)'
            );
        });
    </script>
}