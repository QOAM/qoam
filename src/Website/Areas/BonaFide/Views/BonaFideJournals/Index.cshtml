@using PagedList.Mvc
@using QOAM.Website.Helpers
@using QOAM.Website.ViewModels.BonaFideJournals
@model BonaFideJournalsViewModel

@{
    ViewBag.Title = "BFJ Journals";
    var action = ViewBag.PageId == "journals-notinjournaltocs-page" ? "NotInJournalTOCs" : "Index";
    var controller = ViewBag.PageId == "myqoam-index-page" ? "MyQoam" : "Journals";
}

<div class="container main">
    <div class="row side">
        <div class="col-md-3">
            <div id="filter" class="well">
                <h3>
                    Filter
                    <img src="~/Images/zoom.png" class="pull-right clearfix" style="height: 30px;" />
                </h3>

                @using (Html.BeginForm(action, controller, FormMethod.Get, new { id = "search-form" }))
                {
                    <fieldset>
                        <legend>Search</legend>

                        @Html.Partial("_JournalFilters")

                        <p>
                            <input id="submitForm" type="submit" value="Search" class="btn btn-primary" />
                        </p>
                    </fieldset>
                }
            </div>
        </div>

        <div class="col-md-9">
            @if (Model.Journals.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th class="title">
                                Title
                            </th>
                            <th class="publisher">Publisher</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var journal in Model.Journals)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(journal.Title, "Details", "Journals", new { id = journal.Id, returnUrl = Request.RawUrl }, new { @class = Model.JournalLinkCssClass(journal), data_title = @journal.Title })
                                </td>
                                <td>@Html.ActionLink(journal.Publisher.Name, "Index", "Journals", new { Publisher = journal.Publisher.Name }, null)</td>
                            </tr>
                        }

                    </tbody>
                </table>

                @Html.PagedListPager(Model.Journals, page => Url.Action(@ViewContext.RouteData.Values["action"].ToString(), Model.ToRouteValueDictionary(page)), Html.PagedListRenderOptions())
            }
            else
            {
                @Html.Partial("_EmptyText")
            }
        </div>
    </div>
</div>

<div id="submit-trust-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 id="submit-trust-modal-title"></h3>
            </div>
            <div class="modal-body">

                @if (User.Identity.IsAuthenticated)
                {
                    <p>
                        The library of <strong>@ViewBag.User.Institution.Name</strong> confirms the honesty of this journal.<br />
                        Date: <strong>@DateTime.Today.ToString("d")</strong>. Contact: <strong>@ViewBag.User.DisplayName</strong>.
                    </p>
                    <form id="submit-trust-form">
                        <label><input type="checkbox" /> I am submitting this expression of trust on behalf of my library</label>
                    </form>
                }
                else
                {
                    <p>
                        If you want to express your trust in this journal on behalf of your library, please @Html.ActionLink("register", "Register", "Account", new { area = "" }, null) (new user)
                        or @Html.ActionLink("log in", "Login", "Account", new { area = "" }, null) (returning user) with your academic email address.
                    </p>
                }
            </div>
            @if (User.Identity.IsAuthenticated)
            {
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal" id="download-journals">Continue</button>
                </div>
            }
        </div>
    </div>
</div>

@section stylesheets
{
    @Styles.Render("~/styles/typeahead")
    @Styles.Render("~/styles/chosen")
}

@section scripts
{
    @Scripts.Render("~/scripts/typeahead")
    @Scripts.Render("~/scripts/chosen")

    @Html.Partial("_FormScripts")

    <script type="text/javascript">
        $(function () {
            var bfjController = new BfjController();
            bfjController.index(
                '@Url.Action("Titles", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Issns", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Publishers", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Subjects", null, null, this.Request.Url.Scheme)',
                '@Url.Action("Languages", null, null, this.Request.Url.Scheme)'
            );
        });
    </script>
}