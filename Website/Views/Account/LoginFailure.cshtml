@using QOAM.Website.Models
@model LoginFailureReason

@{
    ViewBag.Title = "Login failed";
}

<div class="container main">
    <div class="row alert alert-danger" role="danger">

        @switch (Model)
        {
            case LoginFailureReason.ExternalAuthenticationFailed:
                <p>Authentication was not succesful. Please try to log in again.</p>
                break;
            case LoginFailureReason.UsernameAlreadyExists:
                <p>The username already exists. Perhaps you already have an account?</p>
                break;
            case LoginFailureReason.SaveFailed:
                <p>There was an error while saving the user to the database. Please try again.</p>
                break;
            case LoginFailureReason.SamlAttributeMissing:
                <p>
                    Authentication failed due to one of the required SAML attributes not being provided. The following SAML attributes are required:
                
                    <ul>
                        <li>urn:oid:0.9.2342.19200300.100.1.3 (<em>mail</em>)</li>
                        <li>urn:oid:2.16.840.1.113730.3.1.241 (<em>displayName</em>)</li>
                        <li>urn:oid:1.3.6.1.4.1.25178.1.2.9 (<em>schacHomeOrganization</em>)</li>
                        <li>urn:oid:1.3.6.1.4.1.5923.1.1.1.10 (<em>eduPersonTargetedID</em>)</li>
                    </ul>
                </p>
        
                <p>
                    Please contact your local SAML administrator to solve this issue.
                </p>
                break;
        }

    </div>
</div>