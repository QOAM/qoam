@using System.Web.Optimization
@model QOAM.Website.ViewModels.Account.ResetPasswordConfirmedViewModel

@{
    ViewBag.Title = "Reset your password";
}

<div class="container main">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please fill in the fields and submit the form</h3>
                </div>
                <div class="panel-body">

                    @using (Html.BeginForm("ResetPasswordConfirmed", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary()
                        @Html.HiddenFor(m => m.Token);
                        
                        <fieldset>
                            <legend>Please fill in the fields and submit the form</legend>

                            <div class="form-group">
                                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "control-label" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                                <div class="col-md-10">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.ConfirmPassword, null, new { @class = "control-label" })
                                </div>
                            </div>

                            <div class="col-md-10 col-md-offset-2">
                                <input type="submit" value="Change password" class="btn btn-primary" />
                            </div>
                        </fieldset>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}