@using QOAM.Website.Resources

@if (User.Identity.IsAuthenticated)
{
    <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="@Url.Action("Details", "Profiles", new { id = ViewBag.User.Id })">@ViewBag.User.DisplayName <b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li>@Html.ActionLink(Strings.Profile, "Details", "Profiles", new { id = ViewBag.User.Id }, null)</li>
            <li class="divider"></li>
            <li>
                <a href="~/Logout.ashx">@Strings.LogOff</a>
            </li>
        </ul>
    </li>
}
else
{
    <li><a href="@Url.Action("Login", "Account")">@Strings.LogIn</a></li>
}
