@using QOAM.Core
@model QOAM.Core.Price

@if (Model == null)
{
    
}
else if (Model.FeeType == FeeType.NoFee)
{
    <text>No Fee</text>
}
else if (Model.FeeType == FeeType.Absent)
{
    <text>Absent or diffuse</text>
}
else if (Model.Amount.HasValue && Model.Amount.Value == 0)
{
    <text>Free</text>
}
else if (Model.FeeType == FeeType.Page)
{
    @Html.DisplayFor(m => m.Currency)
    @Model.Amount.ToString()
    <text> per page</text>
}
else
{
    @Html.DisplayFor(m => m.Currency)
    @Model.Amount.ToString()
    <text> per article</text>
}
