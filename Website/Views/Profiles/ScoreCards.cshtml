@using RU.Uci.OAMarket.Website.Resources
@model PagedList.IPagedList<RU.Uci.OAMarket.Domain.ScoreCard>

@foreach (var scoreCard in Model)
{
    var isOwner = User.Identity.IsAuthenticated && scoreCard.UserProfile.Id == ViewBag.User.Id;
    var nextPage = Model.IsLastPage ? (int?)null : (Model.PageNumber + 1);
    
    <tr data-next-page="@nextPage">
        <td>
            @if (isOwner)
            {
                @Html.ActionLink(scoreCard.Journal.Title, "Journal", "Score", new { id = scoreCard.JournalId }, null)
            }
            else
            {
                @Html.ActionLink(scoreCard.Journal.Title, "Details", "Score", new { id = scoreCard.Id }, null)
            }
        </td>
        <td>@(scoreCard.Score.OverallScore.AverageScore.HasValue ? scoreCard.Score.OverallScore.AverageScore.Value.ToString("0.0") : "-")</td>
        <td>@scoreCard.Journal.JournalScore.OverallScore.AverageScore.ToString("0.0")</td>
        <td>@(scoreCard.Score.ValuationScore.AverageScore.HasValue ? scoreCard.Score.ValuationScore.AverageScore.Value.ToString("0.0") : "-")</td>
        <td>@scoreCard.Journal.JournalScore.ValuationScore.AverageScore.ToString("0.0")</td>
        <td>@Html.DisplayFor(_ => scoreCard.State)</td>
        <td>@(scoreCard.DateExpiration.HasValue ? scoreCard.DateExpiration.ToString() : "-")</td>
        <td>
            @if (isOwner)
            {
                <span class="glyphicon glyphicon-pencil"></span> @Html.ActionLink(Strings.Edit, "Journal", "Score", new { id = scoreCard.JournalId }, null)
            }
            else
            {
                <span class="glyphicon glyphicon-eye-open"></span> @Html.ActionLink(Strings.View, "Details", "Score", new { id = scoreCard.Id }, null)
            }
        </td>
    </tr>
}